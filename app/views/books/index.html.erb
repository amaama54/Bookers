<div class="body">
    <h1>Books</h1>

    <table class="table">
        <thead>
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th><!--空白--></th>
            </tr>
        </thead>
        <tbody>
        　　<% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <% if @books %>
                      <td><%= link_to "Show", "/books/#{book.id}" %></td>
                      <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
                      <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete %></td>
                    <% end %>
                </tr>
        　　<% end %>
        </tbody>
    </table>
    
    <h2>New book</h2>
    <div class="new_book">
        <% if @book.errors.any? %>
            <%= @book.errors.count %>errors prohibited this book from being saved:
            <% @book.errors.full_messages.each do |message| %>
            <ul>
                <li><%= message %></li>
            </ul>
            <% end %>
        <% end %>
        <%= form_with model:@book, local:true do |f| %>
            <div class="input">
                <p>Title</p>
                <%= f.text_field :title %>
            </div>
            <div class="input">
                <p>Body</p>
                <%= f.text_area :body %>
            </div>
        <div class="btn">
            <%= f.submit "Create Book" %>
        </div>
        <% end %>
    </div>
</body>